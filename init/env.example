# BuiltEnvironment.ai Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
APP_ENV=development
APP_PORT=3000
DEBUG=true

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/builtenvironment_db
VECTOR_DB_PATH=./data/chromadb

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# Langflow
LANGFLOW_API_URL=http://localhost:7860
LANGFLOW_API_KEY=your_langflow_api_key_here

# AWS (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-2
S3_BUCKET_NAME=builtenvironment-documents

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@builtenvironment.ai

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=false

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_RAG=true
ENABLE_OCR=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_TRAFFIC_LIGHT_SYSTEM=true

# GDPR Compliance
DATA_RETENTION_DAYS=365
AUTO_PURGE_ENABLED=true
